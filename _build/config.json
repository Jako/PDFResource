{
  "name": "PDFResource",
  "lowCaseName": "pdfresource",
  "description": "Convert MODX resources to PDF files using mPDF",
  "author": "Thomas Jakobi",
  "version": "1.5.8",
  "package": {
    "elements": {
      "chunks": [
        {
          "name": "tplPDF",
          "file": "tplpdf.html"
        },
        {
          "name": "tplCSS",
          "file": "tplcss.css"
        }
      ],
      "snippets": [
        {
          "name": "PDFResourceLink",
          "file": "pdfresourcelink.snippet.php",
          "description": "Output filter to create a link to the PDF generated by the given resource id."
        }
      ],
      "plugins": [
        {
          "name": "PDFResource",
          "file": "pdfresource.plugin.php",
          "description": "Convert MODX resources to PDF during saving or rendering the resource.",
          "events": [
            "OnDocFormSave",
            "OnWebPagePrerender"
          ]
        }
      ],
      "tvs": [
        {
          "name": "create_pdf",
          "caption": "Create PDF",
          "description": "Create PDF while saving this resouce",
          "type": "checkbox",
          "inputOptionValues": "Yes==1",
          "defaultValue": "1",
          "category": "PDF"
        },
        {
          "name": "live_pdf",
          "value": "",
          "caption": "Create PDF on the fly",
          "description": "Create PDF on the fly and redirect to that PDF file",
          "type": "checkbox",
          "inputOptionValues": "Yes==1",
          "defaultValue": "0",
          "category": "PDF"
        },
        {
          "name": "pdf_options",
          "value": "",
          "caption": "PDF Options",
          "description": "JSON encoded options for the PDF generation",
          "type": "textarea",
          "category": "PDF"
        }
      ],
      "categories": [
        {
          "name": "PDF"
        }
      ]
    },
    "systemSettings": [
      {
        "key": "mode",
        "type": "textfield",
        "area": "pdf",
        "value": ""
      },
      {
        "key": "format",
        "type": "textfield",
        "area": "pdf",
        "value": "A4"
      },
      {
        "key": "defaultFontSize",
        "type": "textfield",
        "area": "pdf",
        "value": "0"
      },
      {
        "key": "defaultFont",
        "type": "textfield",
        "area": "pdf",
        "value": ""
      },
      {
        "key": "mgl",
        "type": "textfield",
        "area": "pdf",
        "value": "15"
      },
      {
        "key": "mgr",
        "type": "textfield",
        "area": "pdf",
        "value": "15"
      },
      {
        "key": "mgt",
        "type": "textfield",
        "area": "pdf",
        "value": "16"
      },
      {
        "key": "mgb",
        "type": "textfield",
        "area": "pdf",
        "value": "16"
      },
      {
        "key": "mgh",
        "type": "textfield",
        "area": "pdf",
        "value": "9"
      },
      {
        "key": "mgf",
        "type": "textfield",
        "area": "pdf",
        "value": "9"
      },
      {
        "key": "orientation",
        "type": "textfield",
        "area": "pdf",
        "value": "P"
      },
      {
        "key": "customFonts",
        "type": "textarea",
        "area": "pdf",
        "value": ""
      },
      {
        "key": "generateOnPrerender",
        "type": "combo-boolean",
        "area": "pdf",
        "value": false
      },
      {
        "key": "permissions",
        "type": "textarea",
        "area": "pdf",
        "value": "[]"
      },
      {
        "key": "userPassword",
        "type": "textarea",
        "area": "pdf",
        "value": ""
      },
      {
        "key": "ownerPassword",
        "type": "textarea",
        "area": "pdf",
        "value": ""
      },
      {
        "key": "mPDFMethods",
        "type": "textfield",
        "area": "pdf",
        "value": "[]"
      },
      {
        "key": "pdfTv",
        "type": "textfield",
        "area": "resource",
        "value": "create_pdf"
      },
      {
        "key": "pdfTvLive",
        "type": "textfield",
        "area": "resource",
        "value": "live_pdf"
      },
      {
        "key": "pdfTvOptions",
        "type": "textfield",
        "area": "resource",
        "value": "pdf_options"
      },
      {
        "key": "pdfTpl",
        "type": "textfield",
        "area": "template",
        "value": "tplPDF"
      },
      {
        "key": "cssTpl",
        "type": "textfield",
        "area": "template",
        "value": "tplCSS"
      },
      {
        "key": "processTVs",
        "type": "combo-boolean",
        "area": "template",
        "value": true
      },
      {
        "key": "tvPrefix",
        "type": "textfield",
        "area": "template",
        "value": "tv."
      }
    ]
  },
  "build": {
    "readme": "docs/readme.txt",
    "license": "docs/license.txt",
    "changelog": "docs/changelog.txt",
    "options": {
      "modx_version": "2.5",
      "empty_folders": {
        "{package_path}core/components/pdfresource/vendor/mpdf/mpdf/graph_cache": "*",
        "{package_path}core/components/pdfresource/vendor/mpdf/mpdf/tmp": "*",
        "{package_path}core/components/pdfresource/vendor/mpdf/mpdf/ttfontdata": "*",
        "{package_path}core/components/pdfresource/vendor/mpdf/mpdf/ttfonts": "!{DejaVu*,Free*}"
      }
    },
    "setupOptions": {
      "source": "setup.options.php"
    },
    "resolver": {
      "after": [
        "resolve.folders.php",
        "resolve.treehillstudio.php"
      ]
    }
  },
  "dependencies": [{
    "name": "modx",
    "version": ">=2.4"
  },{
    "name": "php",
    "version": ">=5.4"
  }]
}
